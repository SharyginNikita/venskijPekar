extends ../layout/layoutPage.pug

block content

    article.product-page

        .product-page-gallery

            .product-page-gallery__container.product-page-gallery__slides

                .product-page-gallery__wrapper#product-page-gallery__lightgallery

                    - for(let x = 0; x <= 3; x++)

                        a.product-page-gallery__slide(href="/images/product.png")
                            img.product-page-gallery__image(src="/images/product.png")
                        
                .product-page-gallery__prev

                .product-page-gallery__next
        
        .product-page-item

            h1.product-page-item__title "Малиновая Рапсодия" 100 гр

            .product-page-item__wrapper

                .product-page-item__wrap

                    .product-page-item__price 

                        .product-page-item__price-value 95

                        .product-page-item__price-currency ₽

                    .counter

                        input.counter__input(type="text" readonly="true")

                        ul.counter__options

                            - for (x = 1; x < 10; x++)

                                li.counter__options-item 
                                
                                    span.counter__options-number #{x}

                            li.counter__options-item.counter__options-item_arbitary

                                span.counter__options-number 10+

                        i.material-icons-round.md-keyboard_arrow_down.counter__arrow

                ul.product-page-props.product-page-item__wrap

                    li.product-page-props__prop

                        .product-page-props__prop-title Производитель:

                        .product-page-props__prop-value Венский Пекарь

                    li.product-page-props__prop

                        .product-page-props__prop-title Артикул:

                        .product-page-props__prop-value 123456789

                    li.product-page-props__prop

                        .product-page-props__prop-title Вес:

                        .product-page-props__prop-value 95 грамм

                .product-page-item__wrap.product-page-item__buttons

                    button.product-page-item__btn-cart Добавить в корзину

                        i.material-icons-round.md-add_shopping_cart.product-page-item__icon

                    button.product-page-item__btn-one-click Купить в один клик   

                        i.material-icons-outlined.md-touch_app.product-page-item__icon    


block append scripts
    script(src="./js/product-page.js" + date)
